<h2 class="text-[44px] leading-[84px] font-semibold mb-[18px]">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data:{controller: 'forms'}) do |f| %>

  <div class="field">
    <%= f.label :email, class: 'mb-[7px] text-[16px] leading-[24px] font-light' %>
    <%= f.email_field :email, autocomplete: "email", class: 'bg-[#F4F6FF] h-[55px] mb-[20px] w-full md:max-w-[478px] rounded-md', data: {action:'keyup->forms#validate'} %>
  </div>

  <div class="field">
    <div class="w-flex justify-between">
    <%= f.label :password, class: 'mb-[7px] text-[16px] leading-[24px] font-light' %>
    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'text-slate-400 hover:text-slate-600 font-light' %>
    <% end %>
    </div>
    <div class="password-field mb-[25px]">
      <%= f.password_field :password, autocomplete: "current-password", class: 'bg-[#F4F6FF] w-full w-full md:max-w-[478px] h-[55px] rounded-md', data: {action:'keyup->forms#validate'}%>
      <%= image_tag "eye_close.svg", class: 'eyeOp', data:{action: 'click->forms#passShow'}%>
      <%= image_tag "eye_open.svg", class: 'eyeCl hidden', data:{action: 'click->forms#passShow'}%>
    </div>
  </div>

  <% if devise_mapping.rememberable? && false %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div id = "helper" class="helper mb-[25px] hidden" data-forms-target="helper">
    <%= image_tag 'info_red.svg', class: "pt-[5px] mr-[4px]" %>
    <div class="text-[#DF0404] helper-text"><%=flash[:alert]%></div>
  </div>

  <div class="actions">
    <%= button_tag 'LOG IN', type: 'submit', class: 'btn-primary p-[4px] w-[150px] h-[46px] rounded-full mb-[28px] text-[16px] leading-[24px] font-semibold'%>
    <%# f.submit "LOG IN", class: 'bg-[#0344BF] hover:bg-blue-500 text-white p-[4px] w-[150px] h-[46px] rounded-full mb-[28px] cursor-pointer text-[16px] leading-[24px] font-semibold' %>
  </div>

  <div class="flex relative h-[30px] justify-center mb-[28px]">
    <div class="text-slate-300 bg-white flex items-center relative z-[3] px-[16px]">OR</div>
    <div class="border-t-[1px] border-slate-300 absolute top-[14.5px] w-[85%] z-[2]"></div>
  </div>

  <div class="google-btn jus-c-item-c mb-[37px]">
    <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'gap-3 border-[1px] border-slate-300 w-[260px] h-[55px] jus-c-item-c rounded-lg cursor-pointer' do %>
      <div class="google-icon-wrapper">
      <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
      </div>
      <p class="btn-text">Continue with Google</p>
    <%end%>
  </div>
<% end %>

<%# render "devise/shared/links" %>
