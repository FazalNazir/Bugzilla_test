<h2 class="leading-[60px] text-[40px] font-semibold mb-[42px]">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'mb-[7px]' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-[#F4F6FF] h-[55px] mb-[11px] w-full md:max-w-[478px] rounded-md', data: {action: 'keyup->forms#validate'} %>
  </div>

  <div id = "helper" class="helper flex mb-[53px] pt-[4px] text-[#DF0404]">
    <div class="mr-[4px]">
    </div>
  </div>

  <div class="actions">
    <%# f.submit "Send me reset password instructions" %>
    <%= button_tag 'SUBMIT', type: 'submit', class: 'btn-primary p-[4px] w-[150px] h-[46px] rounded-full mb-[53px] text-[16px] leading-[24px] font-semibold'%>
  </div>
<% end %>

<%# render "devise/shared/links" %>
