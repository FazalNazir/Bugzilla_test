<h2 class="leading-[60px] text-[40px] font-semibold mb-[16px]" >Reset Password.</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data:{controller: 'forms'}) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mb-[17px]">
    <%= f.label :password, "Enter your New Password", class: 'mb-[7px]' %><br />
    <div class="password-field">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'bg-[#F4F6FF] h-[55px] mb-[11px] w-full md:max-w-[478px] rounded-md', data: {action: 'keyup->forms#validate'} %>
      <%= image_tag "eye_close.svg", class: 'eyeOp', data:{action: 'click->forms#passShow'}%>
      <%= image_tag "eye_open.svg", class: 'eyeCl hidden', data:{action: 'click->forms#passShow'}%>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: 'mb-[7px]' %><br />
    <div class="password-field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'bg-[#F4F6FF] h-[55px] mb-[11px] w-full md:max-w-[478px] rounded-md mb-[33px]', data: {action: 'keyup->forms#validate'} %>
      <%= image_tag "eye_close.svg", class: 'eyeOp', data:{action: 'click->forms#passShow'}%>
      <%= image_tag "eye_open.svg", class: 'hidden eyeCl', data:{action: 'click->forms#passShow'}%>
    </div>
  </div>

  <div class="h-[1px] w-full mb-[33px] <%= resource.errors.full_messages.size != 0 || flash.key?(:notice) || flash.key?(:alert)? 'hidden' : ''%>" data-forms-target="pseudoMargin" id="pseudo-margin"></div>

  <div id = "helper" class="helper w-full flex items-start mb-[25px] text-justify <%=resource.errors.full_messages.size == 0 ? 'hidden' : ''%>">
    <%= image_tag 'info_red.svg', class: "pt-[5px] mr-[4px]" %>
    <div class="text-[#DF0404] helper-text"><%= resource.errors.full_messages.join(' and ')%></div>
  </div>

  <div class="actions">
    <%= button_tag 'RESET', type: 'submit', class: 'btn-primary p-[4px] w-[150px] h-[46px] rounded-full mb-[55px] text-[16px] leading-[24px] font-semibold'%>
  </div>
<% end %>

