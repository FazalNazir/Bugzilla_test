<%=turbo_stream.replace 'edit-modal' do%>
  <div class="absolute w-full h-full bg-[rgba(0,0,0,0.3)] top-0 jus-c-item-c left-0 edit-modal z-[100]" id="edit-modal">
    <div class="relative bg-white h-[calc(100%-56px)] w-[50%] p-7">
      <div class="ic-cancel cursor-pointer right-0 h-[44px] w-[44px] absolute z-[1]" data-action="click->effects#modal"></div>
      <div class="pt-7 pb-7 overflow-y-scroll h-full">
        <%=@section.description%>
      </div>
      <div class="transition-all flex absolute bottom-0 right-0 z-[1] mb-7 opacity-50 hover:opacity-100">
        <a href="<%=@previous.nil? ? '#' : section_path(@previous.id)%>" data-turbo-stream="true"><button class="w-fit mr-[10px] px-[13px] h-[42px] rounded-lg jus-c-item-c text-white btn-blue flex disabled:hover:bg-slate-400 next-btn" <%=@previous.nil? ? 'disabled' : ''%>>
          <div class="w-[24px] h-[24px] ic-drop-down-w rotate-90"></div>
          Previous
        </button></a>
        <a href="<%=@next.nil? ? '#' : section_path(@next.id)%>" data-turbo-stream="true"><button class="w-[100px] px-[13px] mr-7 h-[42px] rounded-lg jus-c-item-c text-white btn-blue flex disabled:hover:bg-slate-400 next-btn" <%=@next.nil? ? 'disabled' : ''%>>
          Next
          <div class="w-[24px] h-[24px] ic-drop-down-w ml-[10px] -rotate-90"></div>
        </button></a>
      </div>
    </div>
  </div>
<%end%>
